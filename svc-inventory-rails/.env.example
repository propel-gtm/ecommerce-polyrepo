# Rails environment
RAILS_ENV=development
RAILS_LOG_LEVEL=debug
SECRET_KEY_BASE=your-secret-key-base-here-generate-with-rails-secret

# Database configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=inventory_development

# Redis (for Sidekiq)
REDIS_URL=redis://localhost:6379/0

# gRPC server configuration
GRPC_PORT=50053
GRPC_POOL_SIZE=30

# Application configuration
RAILS_MAX_THREADS=5

# Service discovery (optional)
SERVICE_NAME=inventory-service
SERVICE_HOST=localhost
SERVICE_PORT=3000

# Health check settings
HEALTH_CHECK_PATH=/health

# Logging
LOG_FORMAT=json
LOG_LEVEL=info

# Metrics (optional)
METRICS_ENABLED=false
METRICS_PORT=9090

# Feature flags (optional)
ENABLE_BACKORDERS=true
LOW_STOCK_THRESHOLD=10

# External services (optional)
# ORDER_SERVICE_URL=http://localhost:3001
# NOTIFICATION_SERVICE_URL=http://localhost:3002

# AWS (if using for storage/messaging)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1

# Sentry (error tracking)
# SENTRY_DSN=

# New Relic (APM)
# NEW_RELIC_LICENSE_KEY=
# NEW_RELIC_APP_NAME=inventory-service
